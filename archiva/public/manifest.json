{
  "manifest_version": 3,
  "name": "Archiva",
  "version": "1.0.0",
  "description": "Seamlessly Manage Smart Contracts with Security and Privacy.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": ["storage", "activeTab"]
}
